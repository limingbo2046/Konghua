<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ParrotMimicry.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ParrotMimicry"
    xmlns:pages="clr-namespace:ParrotMimicry.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="ParrotMimicry">

    <TabBar>
        <Tab Title="项目" Icon="dotnet_bot.png">
            <ShellContent
                Title="项目"
                ContentTemplate="{DataTemplate pages:ProjectPage}"
                Route="ProjectPage" />
        </Tab>
        <Tab Title="视频转音频" Icon="dotnet_bot.png">
            <ShellContent
                Title="视频转音频"
                ContentTemplate="{DataTemplate pages:Video2WavPage}"
                Route="Video2WavPage" />
        </Tab>
        <Tab Title="字幕生成" Icon="dotnet_bot.png">
            <ShellContent
                Title="字幕生成"
                ContentTemplate="{DataTemplate pages:WhisperPage}"
                Route="WhisperPage" />
        </Tab>
        <Tab Title="生词复习" Icon="dotnet_bot.png">
            <ShellContent
                Title="生词复习"
                ContentTemplate="{DataTemplate pages:NewVocabularyPage}"
                Route="NewVocabularyPage" />
        </Tab>
        <Tab Title="设置" Icon="dotnet_bot.png">
            <ShellContent
                Title="设置"
                ContentTemplate="{DataTemplate pages:SettingPage}"
                Route="SettingPage" />
        </Tab>
    </TabBar>

</Shell>
